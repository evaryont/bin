#!/usr/bin/perl
#One Manga loader 0.2 alpha
#by BlackLotus
#maxmusterm@gmail.com
#don't bother me how bad this script is ... i was bored

use LWP::Simple;

$url="http://www.onemanga.com";
$seite=get($url);
if (!@ARGV) {
	print "Enter a search string:\n";
	$buchstabe=<stdin>;
	chomp($buchstabe);
} else {
	$buchstabe=@ARGV[<*>]
}
while ($seite =~ m/<option value="(.+)">(.+)<\/option>/g){
	$urllink=$1;
	$name=$2;
	if($name =~ m/^$buchstabe/i){
		$i++;
		print "$i: $name\n";
		$mangas[$i]="$urllink";
	}
}
$maximal=$i;

$nummer=<stdin>;
chomp($nummer);
if ($nummer>$maximal){
	print "Zu groÃŸ";
	exit;
}

$manganame=$mangas[$nummer];
$mangalink="$url/".$manganame;
print "$mangalink\n";
$seite=get($mangalink);
if ($seite =~ m/<td class="ch-subject"><a href="\/(.+)\/(\d+)\/">(.+)<\/a>/){
	print "$1 has $2 chapters.\nEnter a range (foo-bar):";
}
$range=<stdin>;

if ($range =~ m/(\d+)/) {
	$foo=$1;
	$bar=$foo;
	print "Downloading chapter $foo\n";
}
if($range =~ m/(\d+)\-(\d+)/){
	$foo=$1;
	$bar=$2;
	print "Downloading chapters $foo to $bar\n";
}

for ($i=$foo;$i<=$bar;$i++){
	if (-e "$manganame/"){
	}else{
		mkdir("$manganame", 0777);
	}
	mkdir("$manganame/$i",0777);
	
	$ignorechap = 0;
	$seite = get("$mangalink/$i/01");
	unless ($seite =~ m/<img class=".+" src=".+" alt=".+" \/>/){
		$seite = get("$mangalink/$i/01-02");
		unless ($seite =~ m/<img class=".+" src=".+" alt=".+" \/>/){
			$seite = get("$mangalink/$i/Page01");
			unless ($seite =~ m/<img class=".+" src=".+" alt=".+" \/>/){
				$seite = get("$mangalink/$i/Page01-02");
				unless ($seite =~ m/<img class=".+" src=".+" alt=".+" \/>/){
					$seite = get("$mangalink/$i/00-01");
					unless ($seite =~ m/<img class=".+" src=".+" alt=".+" \/>/){
						$seite = get("$mangalink/$i/001");
						unless ($seite =~ m/<img class=".+" src=".+" alt=".+" \/>/){
							print "Could not find URL. Ignoring chapter.\n";
							$ignorechap = 1;
						}
					}
				}
			}
		}
	}

	if($ignorechap == 0){
		$j=0;
		while ($seite =~ m/<option value="(.+)".*>(.+)<\/option>/g){
			$dings=$2;
			$liste["$j"]="$dings";
			$j=$j+1;
		}
		if ($seite =~ m/<img class=".+" src="(.+)\/.+.(jpg|jpeg)" alt=".+" \/>/){
			$hauptlink=$1;
		}
		print "URL: $hauptlink\n";
		foreach $eintrag (@liste){
			$boah="$hauptlink/$eintrag.jpg";
			print "Try to load $boah in $manganame/$i/$eintrag.jpg... ";
			mirror("$boah","$manganame/$i/$eintrag.jpg");
			if (-e "$manganame/$i/$eintrag.jpg"){
				print "Loaded\n";
			}else{
				mirror("$hauptlink/".$eintrag.".jpg","$manganame/$i/$eintrag.jpg");
				print "Reloaded\n";
			}
		}
	}
}
sub reload{
	($link,$file)=@_;
	print "Try to reload $link to $file\n";
	mirror("$link","$file");
	if (-e "$file"){
		print "RELoaded!\n";
	}else{
		reload($link,$file);
	}
}

